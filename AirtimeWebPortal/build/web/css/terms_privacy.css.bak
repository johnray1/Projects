.text_paragraph{color: #333;font-size:16px;padding:0px;}
.text_paragraph h5{color:#ff5700;font-weight:bold; font-size:19px;padding:0px;}

.letters li{list-style-type: lower-alpha;list-style-position:inside;color:#ff5700;font-weight:bold;}
.letters li p{display:block;color:#000000;font-weight:normal;padding:7px;padding-bottom:27px;background-color:transparent}
.letters li p:hover{display:block;color:#000000;font-weight:normal;padding:7px;padding-bottom:27px;background-color:#ebebeb}

.numbers li{list-style-type:decimal;list-style-position:outside;color:#ff5700;font-weight:bold;}
.numbers li p{display:block;color:#000000;font-weight:normal;padding:7px;padding-bottom:27px;background-color:transparent}
.numbers li p:hover{display:block;color:#000000;font-weight:normal;padding:7px;padding-bottom:27px;background-color:#ebebeb}






