/*TOP HEADER */
.topheader{margin:0px;padding:0px;}
.topheader > div{height:70px;font-family:ubuntu;margin:0px;padding:0px;background-color:#ff5700}
.topheader > div div.logo {margin:0px;padding:0px;}
.topheader > div div.logo img{border:0px solid pink;padding-left:5px;}
.topheader > div div.name{border:0px solid pink;margin:0px;padding:0px;}

.topheader > div div.name strong{margin:0px;padding:0px;padding-right:17px;line-height:70px;text-align:right;font-size:30px;color:#ffffff;border:0px solid red;}

.topheader > div div.name div.dropdown {position: relative; display: inline-block;margin:0px;padding:0px;}

@keyframes animatedBackground {
	from { background-position: 23% 0%;}
	to { background-position: 23% 0%;}
}

.topheader > div div.name div.dropdown span{display:inline-block;width:100%;height:70px;background-color:#ea5200;color:#f1e01e;outline:none;font-size:16px;text-align:center;text-transform:uppercase;text-decoration:none;background-image:url(../images/icon_notifications.png);background-repeat:no-repeat;animation: animatedBackground 1s linear infinite;}
.topheader > div div.name div.dropdown span:hover{display:inline-block;width:100%;height:70px;background-color:#ea5200;color:#f1e01e;outline:none;font-size:16px;text-align:center;text-transform:uppercase;text-decoration:none}
.topheader > div div.name div.dropdown span label{display:inline-block;margin:17px;margin-left:auto;margin-right:auto;padding:3px 17px;background-color:#ffffff;color:#000000;font-size:16px;text-align:center;font-weight:bold;border-radius:7px; }
.topheader > div div.name div.dropdown span img{border:0px solid red;margin-left:7px;}

.topheader > div div.name div.dropdown:hover span{display:inline-block;width:100%;height:70px;background-color:#ea5200;color:#f1e01e;outline:none;font-size:16px;text-align:center;text-transform:uppercase;text-decoration:none;}
.topheader > div div.name div.dropdown-content {display: none;  position: absolute; background-color:#ea5200;  min-width: 375px;min-height:150px;padding: 17px;  z-index: 1;}
.topheader > div div.name div.dropdown-content h4{display:block;width:100%;margin:0px;padding:0px;text-align:center;font-size:14px;color:#ffffff;letter-spacing:2px;font-family:ubuntu;text-transform:uppercase;}
.topheader > div div.name div.dropdown-content a{display:block;margin:0px;margin-top:7px;padding:7px;width:100%;min-height:50px;background-color:#d74b00; color:#ffffff;font-size:13px;text-decoration:none;-webkit-transition: all 800ms ease-in-out;-moz-transition: all 800ms ease-in-out;	-ms-transition: all 800ms ease-in-out;-o-transition: all 800ms ease-in-out;transition: all 800ms ease-in-out;z-index:9999;}
.topheader > div div.name div.dropdown-content a:hover{display:block;margin:0px;margin-top:7px;padding:7px;width:100%;min-height:50px;background-color:#b74000; color:#ffffff;font-size:13px;text-decoration:none;}
.topheader > div div.name div.dropdown-content a div {display:inline-block;height:20px;margin:0px;padding:2px;width:100%;background-color:transparent;color:#ffff00;font-size:12px;text-decoration:none;text-align:left;}
.topheader > div div.name div.dropdown-content a div em{display:inline-block;text-align:right;float:right;margin:0px;padding:0px;color:#ffc19f;font-size:11px;text-decoration:none;}

.topheader > div div.name div.dropdown-content a.more{width:100%;min-height:20px;background-color:transparent;margin:0px;padding:7px;text-align:center;color:#ffffff;font-size:11px;text-decoration:none;text-transform:uppercase;border:0px solid red;}

.topheader > div div.name div.dropdown:hover div.dropdown-content {display: block;}

.topheader > div div.name a.logout{display:inline-block; width: 16.5%;height:70px;margin-left:10px;background-color:#ea5200;color:#f1e01e;outline:none;font-size:14px;line-height:15px;text-align:left;text-transform:none;text-decoration:none;-webkit-transition: all 800ms ease;-moz-transition: all 800ms ease;	-ms-transition: all 800ms ease;-o-transition: all 800ms ease;transition: all 800ms ease;}
.topheader > div div.name a.logout label{padding:7px;margin-top:10px;color:#ffffff;font-size:14px;font-weight:normal;line-height:17px;cursor:hand;}
.topheader > div div.name a.logout label strong{display:block;color:#ffe7d9;font-size:16px;line-height:17px;}

.topheader > div div.name a:hover.logout{background-color:#d24900;background-image:url(../images/icon_logout.png);background-repeat:no-repeat;background-position:right center;}



/* MEDIA QUERIES */

/* Smartphones (portrait and landscape) ----------- */
@media only screen and (min-width : 320px) and (max-width : 480px) {

.topheader > div div.name div.dropdown-content {display: none;  position: absolute; background-color: #ff5700;  min-width: 375px;min-height:150px;padding: 17px; margin-left:-97px; z-index: 1;}
.topheader > div div.name div.dropdown span label{display:inline-block;margin:17px;margin-left:0px;padding:3px 13px;background-color:#ffffff;color:#000000;font-size:14px;text-align:center;font-weight:bold;border-radius:7px;  }

.topheader > div div.name a.logout{width: 49%;background-color:#ea5200;background-image:url(../images/icon_logout.png);background-repeat:no-repeat;background-position:right center;}

}

@media only screen and (min-width :480px) and (max-width : 768px) {
    img.logo{border:0px solid yellow;}
.topheader > div div.name a.logout{width: 49%;background-color:#ea5200;background-image:url(../images/icon_logout.png);background-repeat:no-repeat;background-position:right center;}

}


/* iPads (portrait and landscape) ----------- */
@media only screen and (min-width : 768px) and (max-width : 1024px) {
.topheader > div div.name strong{margin:0px;padding:0px;padding-right:17px;line-height:70px;text-align:right;font-size:14px;color:#ffffff;border:0px solid red;}
.topheader > div div.name a.logout{width: 33%;background-color:#ea5200;background-image:url(../images/icon_logout.png);background-repeat:no-repeat;background-position:right center;}

}


/* Desktops and laptops ----------- */
@media only screen  and (min-width : 1224px) {
    img.logo{border:0px solid green;}
}


/* Large screens ----------- */
@media only screen  and (min-width : 1824px) {
    img.logo{border:0px solid red;}
}