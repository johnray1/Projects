
/************************************
 * Index
************************************/

h1 {
    height: 100%;
    width: 90%;
    font-size: 18px;
    text-align: center;
    margin: 0 0 0 15%;
    text-align: left;
    color: #042c90;
}

.containermap {
    width: 100%;
    height:600px;
    margin: auto;
	font-family:ubuntu;
}




.branchsearch{border:0px solid red;font-size:17px;padding:7px;}
.branchsearch span.line{display:block;width:100%;padding:7px;}

.branchsearch span.line h2{display:block;width:100%;text-align:center;font-size:22px;color:#042c90;line-height:45px;}
.branchsearch span.line h3{display:block;width:100%;text-align:center;font-size:20px;color:#042c90;line-height:45px;}


.branchsearch span.line span.left{display:block;width:50%;float:left;text-align:right;padding-right:7px;color:#a2a2a2;border-bottom:1px solid #f8f8f8;line-height:35px;}
.branchsearch span.line span.right{display:block;width:50%;float:left;text-align:left;padding-left:7px;color:#000000;font-weight:bold;border-bottom:1px solid #f8f8f8;line-height:35px;}






/************************************
SEARCH
************************************/
.myplaces-searcher {
    width: 100%;
    margin: 7px 0;
}

.myplaces-searcher ul, .myplaces-searcher input{

}

.myplaces-searcher input{
    	display:inline-block;width:100%;font-family:ubuntu;font-size:16px;padding:7px;outline:none;    border: 1px solid #ffffff;
